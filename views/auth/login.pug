extends ../../layouts/layout.pug

block content
  h1 Login

  if(errors)
    each error in errors
      .alert.alert-danger= error

  form(action="/auth/login" method="POST")
    .form-group
      label(for='inputEmail') Email
      input#inputEmail.form-control(name="email", type='email', value=values ? values.email : "")
    .form-group
      label(for='inputPassword') Password
      input#inputPassword.form-control(name="password", type='password', value=values ? values.password : "")
    button.btn.btn-primary(type='submit') Login
